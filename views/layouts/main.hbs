    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="shortcut icon" href="/static/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon-16x16.png">
    <link rel="shortcut icon" href="https://icon-library.com/images/iformation-icon/iformation-icon-14.jpg" />
    <style>
        #dropdown-category::after {
            content: none;
        }
    </style>
    <script type="text/javascript">
        if (window.location.hash === "#_=_") {
            history.replaceState
                ? history.replaceState(null, null, window.location.href.split("#")[0])
                : window.location.hash = "";
        }
    </script>
    {{{_sections.css}}}
</head>

<body id="hello">
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #2596be;">
        <div class="d-lg-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    {{#each main_cat}}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/categories/{{category_id}}"
                            id="maincat{{category_id}}" role="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            {{category_name}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="maincat{{category_id}}"
                            id="dropdown{{category_id}}"></div>
                    </li>
                    {{/each}}
                    <hr>
                    <form action="/search" style="width: 100%">
                        <div class="input-group">
                            <input type="hidden" class="form-control input-lg" style="height: 45px" name="criteria"
                                value="0">
                            <input type="text" class="form-control input-lg" style="height: 45px"
                                placeholder="Tìm kiếm..." name="keyword">
                            <div class="input-group-append">
                                <button class="btn btn-light" type="submit"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                    {{#if auth}}
                    <li class="nav-item">
                        <a class="nav-link1" href="/profile"><i class="fa fa-user fa-lg"></i><span> PROFILES</span></a>
                    </li>
                    <li class="nav-item">
                        <form id="frmLogout" action="/auth/log-out" method="POST">
                            <a class="nav-link1" href="javascript: $('#frmLogout').submit();"><i
                                    class="fa fa-sign-out fa-lg"></i><span> ĐĂNG XUẤT</span></a>
                        </form>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link1" href="/auth/sign-up"><i class="fa fa-user-plus fa-lg"></i><span> ĐĂNG
                                KÝ</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link1" href="/auth/log-in"><i class="fa fa-sign-in fa-lg"></i><span> ĐĂNG
                                NHẬP</span></a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link1 text-center dropdown-toggle" id="dropdown-category" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false"><i class="fa fa-bars fa-lg"></i><br><span>CHUYÊN
                            MỤC</span></a>
                    <div class="dropdown-menu w-100" aria-labelledby="dropdown-category">
                        {{#each main_cat}}
                        <div class="dropdown-item p-0">
                            <div class="row">
                                <div class="p-2 col-3" style="background-color: #2596be;">
                                    <a class="text-light ml-4" href="/categories/{{category_id}}">{{category_name}}</a>
                                </div>
                                <div class="p-2 col-9 d-flex flex-wrap" id="side_maincat{{category_id}}"></div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-center" id="search"><i class="fa fa-search fa-lg"></i><br><span>TÌM
                            KIẾM</span></a>
                </li>
            </ul>
            <a class="navbar-brand" href="/"><img src="/static/images/logo.png" alt="Logo" style="height: 45px"></a>
            <ul class="navbar-nav ml-auto">
                {{#if auth}}
                <li class="nav-item">
                    <a class="nav-link1 text-center" href="/profile"><i
                            class="fa fa-user fa-lg"></i><br><span>PROFILES</span></a>
                </li>

                <li class="nav-item">
                    <form id="frmLogout" action="/auth/log-out" method="POST">
                        <a class="nav-link1 text-center" href="javascript: $('#frmLogout').submit();"><i
                                class="fa fa-sign-out fa-lg"></i><br><span>ĐĂNG XUẤT</span></a>
                    </form>

                </li>

                {{else}}
                <li class="nav-item">
                    <a class="nav-link1 text-center" href="/auth/sign-up"><i
                            class="fa fa-user-plus fa-lg"></i><br><span>ĐĂNG
                            KÝ</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link1 text-center" href="/auth/log-in"><i
                            class="fa fa-sign-in fa-lg"></i><br><span>ĐĂNG
                            NHẬP</span></a>
                </li>
                {{/if}}

            </ul>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg" id="search-bar"
        style="background-color: #EEEEEE; display: none; padding: 12px">
        <form action="/search" style="width: 100%">
            <div class="input-group">
                <input type="hidden" class="form-control input-lg" style="height: 45px" name="criteria" value="0">
