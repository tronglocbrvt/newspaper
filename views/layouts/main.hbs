                    <a class="nav-link2" href="/categories/{{category_id}}" id="{{category_id}}">{{category_name}}</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </nav>

    <nav class="navbar navbar-expand-lg mb-3" style="background-color: #08749c;" id="sub-nav" hidden>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mx-auto" id="ul-sub-nav"></ul>
