<div class="row">
  <div class="col-sm-7" style="padding: 0">
    <!-- Slideshow container -->
    <div class="slideshow-container">
      <!-- Full-width images with number and caption text -->
      {{#each hot_news}}
      <div class="mySlides card" style="padding-bottom: 20px;">
        <span class="badge badge-danger week-point">ĐIỂM TUẦN</span>
        <div class="img-containter">
          <img src="/static/images/img4.jpg" width="100%">
        </div>
        <div class="big-title">
          <a href="#" class="title-link">{{article_title}}</a>
        </div>
        <div style="font-size: large;">
          <span class="date"><i class="fa fa-clock-o"></i>&nbsp;{{time_published}}</span>
          <span class="badge badge-secondary article-category">
            <a href="#" class="cat-link text-uppercase">{{category_name}}</a>
          </span>
        </div>
      </div>
      {{/each}}

      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    {{!-- <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
    </div> --}}
  </div>
  <div class="col-sm-5">
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link" id="tab-javascript" data-toggle="tab" href="#content-javascript" role="tab"
          aria-controls="content-javascript" aria-selected="false">
          MỚI NHẤT
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" id="tab-css" data-toggle="tab" href="#content-css" role="tab"
          aria-controls="content-css" aria-selected="true">
          ĐỌC NHIỀU
        </a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade" id="content-javascript" role="tabpanel" aria-labelledby="tab-javascript">
        <div class="hot-news-container">
          {{#each latest_news}}
          <div class="card" style="height: 100px; margin: 10px 0px">
            <div class="card-horizontal">
              <img src="/static/images/img1.jpg" alt="Card image cap" width="150" height="100px">
              <a href="#" class="title-link h-card-content">{{article_title}}</a>
              <div class="h-time">
                <i class="fa fa-clock-o"></i>12/8/2021
                <span class="badge badge-secondary article-category">
                  <a href="#" class="cat-link text-uppercase">{{category_name}}</a>
                </span>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="tab-pane fade show active" id="content-css" role="tabpanel" aria-labelledby="tab-css">
        <div class="hot-news-container">
          {{#each most_news}}
          <div class="card" style="height: 100px; margin: 10px 0px">
            <div class="card-horizontal">
              <img src="/static/images/img1.jpg" alt="Card image cap" width="150" height="100px">
              <a href="#" class="title-link h-card-content">{{article_title}}</a>
              <div class="h-time">
                <i class="fa fa-clock-o"></i>12/8/2021
                <span class="badge badge-secondary article-category">
                  <a href="#" class="cat-link text-uppercase">{{category_name}}</a>
                </span>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    </ul>
  </div>
</div>
<div class="row" style="margin: 20px 0px;">
  <h3>CHUYÊN MỤC NỔI BẬT</h3>
</div>
<div class="row" style="margin-bottom: 20px;">
  {{#each hot_categories}}
  <div class="col-sm-2 v-article">
    <span class="badge badge-primary article-category" style="margin-bottom: 10px">
      <a href="#" class="cat-link text-uppercase" style="font-size: medium;">{{category_name}}</a>
    </span>
    <div class="card v-card">
      <img class="card-img-top" src="/static/images/img1.jpg" alt="Card image cap" width="180px" height="120px">
      <a href="#" class="title-link v-card-content">{{article_title}}</a>
      <div class="v-time">
        <i class="fa fa-clock-o"></i>12/8/2021
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{#section 'css'}}
<link rel="stylesheet" href="/static/css/home.css">
{{/section}}

{{#section 'js'}}
