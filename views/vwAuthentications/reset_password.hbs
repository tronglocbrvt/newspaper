<div class="col-sm-12">
    <div class="container m-5 p-5 bg-light shadow">

        <h2>Đặt lại mật khẩu</h2>
        <hr>
        <br>
        <form id="frmResetPassword" method="post">

            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input id="password" type="password" class="form-control" placeholder="Nhập mật khẩu" maxlength="32"
                    name="raw_password">
                <div id="pswmeter"></div>
                <div id="password_invalid" class="invalid-feedback">
                    Mật khẩu quá đơn giản.
                </div>
            </div>

            <div class="form-group">
                <label for="password_confirm">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" id="password_confirm" placeholder="Nhập lại mật khẩu"
                    maxlength="32">
                <div id="password_confirm_invalid" class="invalid-feedback">
                    Mật khẩu nhập lại không khớp.
                </div>
            </div>

            <div class="form-group">
                <label for="otp">Nhập 6 chữ số được gửi qua email của bạn (chú ý nhập chính xác)</label>
                <input type="text" class="form-control" id="otp" placeholder="Nhập lại mật khẩu"
                    maxlength="32" name="otp">
            </div>

            <button type="submit" class="btn btn-primary">Đặt lại mật khẩu</button>

        </form>

    </div>
</div>

{{#section 'js'}}
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<script src="/static/js/auth/pswmeter.js"></script>

<script>

    $('#password').focus();

    const myPassMeter = passwordStrengthMeter({
        containerElement: '#pswmeter',
        passwordInput: '#password',
        height: 6,
        borderRadius: 0,
        pswMinLength: 8
    });

</script>

<script src="/static/js/auth/reset_password.js">

</script>
{{/section}}