{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="/static/js/datetimepicker/jquery.datetimepicker.css" />
{{/section}}

<div class="container-fluid col-sm-12 align-middle" style="font-size:19px;">
    <div id="content" class="container mt-5  p-2 py-4 p-md-5 mb-5  bg-light shadow"
        style="background-color: rgb(255, 255, 255); ">
        <h2>Đăng ký</h2>
        <hr>
        <br>
        <form id="frmRegister" method="post">

            <div class="form-group">
                <label for="name">Họ và tên</label>
                <input type="text" class="form-control" id="name" placeholder="Họ và tên" name="name" maxlength="40">
                <div id="name_invalid" class="invalid-feedback">
                    Tên không hợp lệ. Tên không được bỏ trống và chứa tối đa 40 kí tự.
                </div>
            </div>

            <div class="form-group">
                <label for="gender">Giới tính: </label>
                <select class="form-select" id="gender" name="gender">
                    <option selected value="-1">Khác</option>
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>
            </div>

            <div class="form-group">
                <label for="date_of_birth">Ngày sinh: </label>
                <input readonly id="date_of_birth" name="raw_date_of_birth">
                <div id="date_of_birth_invalid" class="invalid-feedback">
                    Ngày sinh không hợp lệ. Bạn cần lớn hơn 10 tuổi để đăng ký.
                </div>
            </div>

            <div class="form-group">
                <label for="email">Email: </label>
                <input class="form-control" id="email" type="text" name="email" placeholder="abc@example.com"
                    maxlength="40" />
                <div id="email_invalid" class="invalid-feedback">
                    Email không hợp lệ. Độ dài tối đa email là 40 kí tự và đúng định dạng email.
                </div>
                <div id="email_duplicate" class="invalid-feedback">
                    Email đã tồn tại.
                </div>
            </div>


            <div class="form-group">
                <label for="username">Tài khoản:</label>
                <input type="text" class="form-control" id="username" placeholder="Nhập tài khoản" minlength="5"
                    maxlength="20" name="username">
                <div id="username_invalid" class="invalid-feedback">
                    Tài khoản không hợp lệ. Tài khoản từ 5-20 kí tự in thường hoặc số.
                </div>
                <div id="username_duplicate" class="invalid-feedback">
                    Tài khoản đã tồn tại.
                </div>
            </div>

            <div class="form-group">

                <label for="password">Mật khẩu:</label>
                <input id="password" type="password" class="form-control" minlength="8" maxlength="20"
                    name="raw_password" placeholder="Nhập mật khẩu">
                <div id="pswmeter"></div>

                <div id="password_invalid" class="invalid-feedback">
                    Mật khẩu quá đơn giản. Mật khẩu từ 8-20 kí tự, phải có đủ kí tự in Thường, Hoa và Số.
                </div>
            </div>

            <div class="form-group">
                <label for="password_confirm">Nhập lại mật khẩu:</label>
                <input type="password" class="form-control" id="password_confirm" placeholder="Nhập lại mật khẩu"
                    minlength="8" maxlength="20">
                <div id="password_confirm_invalid" class="invalid-feedback">
                    Mật khẩu nhập lại không khớp.
                </div>
            </div>


            <div class = "my-2">
                <div class="g-recaptcha" id="g-recaptcha"
                    data-sitekey="6LcHkgEcAAAAAFLmiwEbous_oTDjvEXn5KnXczEt">
                </div>
                <div id="captcha_invalid" class="invalid-feedback">
                    Captcha không hợp lệ.
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Đăng ký</button>

        </form>

    </div>
</div>

{{#section 'js'}}
<script src="/static/js/datetimepicker/build/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="/static/js/auth/pswmeter.js"></script>

<script>

    $.datetimepicker.setDateFormatter('moment');

    $('#date_of_birth').datetimepicker(
        {
            timepicker: false,
            format: 'DD/MM/YYYY'
        }
    );

    $('#name').focus();

    const myPassMeter = passwordStrengthMeter({
        containerElement: '#pswmeter',
        passwordInput: '#password',
        height: 6,
        borderRadius: 0,
        pswMinLength: 8
    });

</script>

<script src="/static/js/auth/authenticate.js">

</script>
{{/section}}