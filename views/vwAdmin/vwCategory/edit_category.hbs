<div class="card">
  <h4 class="card-header">
    Chỉnh sửa chuyên mục chính
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        <label for="txtTagID">ID</label>
        <input type="text" readonly class="form-control" id="txtTagID" name="tag_id" value="{{tags.tag_id}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Tên chuyên mục</label>
        <input type="text" class="form-control" id="txtCatName" name="cat_name" autofocus
          value="{{category.category_name}}">
      </div>
      <a class="btn btn-primary" href="/admin/categories/" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Trở về
      </a>
      <button type="submit" class="btn btn-danger ml-5" formaction="/admin/categories/{{category.category_id}}/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Xóa
      </button>
      <button type="submit" class="btn btn-success ml-5" formaction="/admin/categories/{{category.category_id}}/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Lưu
      </button>
    </form>
  </div>
</div>