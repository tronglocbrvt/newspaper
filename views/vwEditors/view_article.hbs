<form>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="" id="is_premium" {{#if
            article.is_premium}}checked{{/if}} readonly>
        <label class="form-check-label" for="is_premium">
            PREMIUM
        </label>
    </div>
    <div class="form-group">
        <label for="title">TIÊU ĐỀ</label>
        <input type="text" class="form-control" id="title" maxlength="75" value="{{this.article.article_title}}"
            readonly>
    </div>
    <div class="form-group">
        <label for="abstract">TÓM TẮT</label>
        <textarea class="form-control" id="abstract" rows="5" readonly>{{article.article_abstract}}</textarea>
    </div>

    <div id="avatar_container" class="form-group">
        <label for="avatar">ẢNH BÌA</label>
        <br>
        <img src="{{article.avatar_url}}" alt="Ảnh bìa" class="pb-4">
    </div>

    <div class="form-group">
        <label for="avatar_caption">MÔ TẢ ẢNH BÌA</label>
        <input type="text" class="form-control" id="avatar_caption" value="{{article.avatar_caption}}" readonly>
    </div>
    <div class="row">
        <div class="form-group col-md-5">
            <label for="category">CHUYÊN MỤC</label>
            <input type="text" class="form-control" id="category" readonly>
            {{!-- <option value="0">---------</option> --}}
            {{!-- {{#each main_cats}}
            <option value="{{category_id}}">{{category_name}}</option>
            {{/each}} --}}
            </input>
        </div>
        <div class="form-group col-md-5">
            <label for="sub_category">CHUYÊN MỤC CON</label>
            <input type="text" class="form-control" id="sub_category" readonly>
            {{!-- <option value="0">---------</option> --}}
            </input>
        </div>
    </div>
    <label for="tags">TAGS</label>
    <div class="mb-2" id="tag-area"></div>
    <div class="form-group">
        <label for="content">NỘI DUNG</label>
        <div id="content" readonly></div>
    </div>
</form>
<hr>
<form method="POST" id="form">
    <div class="row">
        <div class="col-md-5 mb-3">
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="accept">
                <label class="form-check-label text-success" for="accept">
                    DUYỆT
                </label>
            </div>
            <div class="accept-div p-3">
                <div class="form-group">
                    <label for="category" class="text-dark">Đặt chuyên mục</label>
                    <input type="text" class="form-control" id="main_cat_readonly" readonly>
                    <select type="text" class="form-control" name="main_cat_reset" id="main_cat_reset" hidden>
                        {{#each main_cats}}
                        <option value="{{category_id}}">{{category_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="sub_category" class="text-dark">Đặt chuyên mục con</label>
                    <input type="text" class="form-control" id="sub_cat_readonly" readonly></input>
                    <select type="text" class="form-control" name="sub_cat_reset" id="sub_cat_reset" hidden></select>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="tags" class="text-dark col-md-6">Chọn tags</label>
                        <div class="col-md-6 mb-3" id="tag-alert-area" style="color: red;"></div>
                    </div>
                    <input type="text" id="tag_readonly" class="form-control" disabled>
                    <div class="input-group" id="tag-group" hidden>
                        <input type="text" list="tag-list" class="form-control" id="tags" />
                        <datalist id="tag-list">
                            {{#each tags}}
                            <option value="{{tag_name}}">{{tag_name}}</option>
                            {{/each}}
                        </datalist>
                        <div class="input-group-append">
                            <div class="btn btn-primary" id="btn-add-tag">
                                <i class="fa fa-plus"></i> Thêm tag
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tag-area-reset" hidden></div>
                <div class="form-group">
                    <div class="row">
                        <label class="text-dark col-md-6">Chọn thời điểm đăng</label>
                        <div id="date-alert-area" class="col-md-6" style="color: red;"></div>
                    </div>
                    <input type="text" id="date_readonly" class="form-control" disabled>
                    <input id="publish-time" name="publish_time" type="text" class="form-control" hidden>
                </div>
            </div>
        </div>
        <div class="col-md-5 offset-md-1 mb-3">
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="reject">
                <label class="form-check-label text-danger" for="reject">
                    TỪ CHỐI
                </label>
            </div>
            <div class="reject-div p-3">
                <label for="comment" class="text-dark">Lí do từ chối:</label>
                <textarea class="form-control" id="comment" name="comment" placeholder="Vui lòng nhập lí do..." rows="10"
                    disabled></textarea>
            </div>
        </div>
    </div>
    <div class="text-center mb-3">
        <button type="submit" class="btn btn-success" id="submit">
            <i class="fa fa-check" aria-hidden="true"></i>
            Hoàn tất
        </button>
    </div>
</form>


