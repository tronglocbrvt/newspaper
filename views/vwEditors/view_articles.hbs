<!--Content start-->
<main id="content">
    <!--Container-->
    <div class="container c-mobile">
        <div class="row">
            <!--Start include wrapper-->
            <div class="include-wrapper pb-5 col-12">
                <div class="row mt-4 py-3">
                    <!--content-->
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-12 mb-4">
                                <h3>Bài báo chờ duyệt</h3>
                            </div>
                        </div>
                        {{#each categories}}
                        <a class="btn btn-dark mb-3" id="btn{{@index}}" onclick="clickTab(this.id)">
                            {{category_name}}
                        </a>
                        {{/each}}
                        {{#if is_empty}}
                        <h4 class="collapse show text-primary">Không có bài báo chờ</h4>
                        {{else}}
                        <div class="collapse show">
                            <!--table start-->
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class="border-bottom-0 col-md-1" scope="col">Mã bài</th>
                                            <th class="border-bottom-0 col-md-4" scope="col">Tiêu đề</th>
                                            <th class="border-bottom-0 col-md-2" scope="col">Chuyên mục con</th>
                                            <th class="border-bottom-0 col-md-2" scope="col">Tác giả</th>
                                            <th class="border-bottom-0 text-center col-md-1" scope="col">&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each articles}}
                                        <tr>
                                            <th class="col-md-1" scope="row">{{article_id}}</th>
                                            <td class="col-md-4" style="font-weight: 600;">{{article_title}}</td>
                                            <td class="col-md-2">{{category_name}}</td>
                                            <td class="col-md-2">{{writer_alias}}</td>
                                            <td class="text-center col-md-1">
                                                <a class="btn btn-primary btn-sm text-white mb-2 mb-lg-0"
                                                    href="/editors/review/{{article_id}}" title="Xem bài báo"><i
                                                        class="fa fa-eye"></i> Xem</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            <!--end table-->
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <!--Pagination-->
        {{#if is_show_pagination}}
        <nav aria-label="..." class="d-flex justify-content-center" style="padding-top: 30px;">
            <ul class="pagination">
                <li class="page-item {{#if this.page_first}} disabled {{else}} enabled {{/if}}">
                    <a class="page-link" href="?tab={{tab}}&page=1" aria-disabled="true">&lt;&lt;</a>
                </li>
                {{#each this.page_numbers}}
                {{#if isCurrent}}
                <li class="page-item {{#if isCurrent}}active{{/if}}">
                    <a class="page-link" href="javascript:;">{{value}}</a>
                </li>
                {{else}}
                <li class="page-item {{#if hide}}hide{{/if}}">
                    <a class="page-link" href="?tab={{tab}}&page={{value}}">{{value}}</a>
                </li>
                {{/if}}
                {{/each}}
                <li class="page-item {{#if this.page_last}} disabled {{else}} enabled {{/if}}">
                    <a class="page-link" href="?tab={{tab}}&page={{n_pages}}" aria-disabled="true">&gt;&gt;</a>
                </li>
            </ul>
        </nav>
        {{/if}}
    </div>
</main>

{{#section 'js'}}
<script>
    var tab = "{{tab}}";
    $(`#btn${tab}`).removeClass('btn-dark').addClass('btn-success');

    function clickTab(id) {
        id = id.substr(3, id.length);
        window.location.href = `/editors/reviews?tab=${id}`;
    }
</script>

{{/section}}